extends ../layout/rest/test.pug
block title
	title REST-SEQ 테스트
block js
	script(src="/js/rest-seq.js")
block content
	.container
		.jumbotron
			h1 REST-SEQ TEST
		.div.create.my-3.border-bottom.pb-2
			h3.mb-2.mt-3 - SAVE (Create)
			form(name="saveForm" method="post" action="/rest-seq" onsubmit="return saveFn(this);")
				div.mr-2.form-inline
					input.form-control.mx-1(name="stdname" placeholder="NAME")
					input.form-control.mx-1(name="kor" type="number" min="0" max="100" placeholder="KOR")
					input.form-control.mx-1(name="eng" type="number" min="0" max="100" placeholder="ENG")
					input.form-control.mx-1(name="math" type="number" min="0" max="100" placeholder="MATH")
					button.btn.btn-primary SAVE
		.div.update.my-3.border-bottom.pb-2
			h3.mb-2.mt-3 - CHANGE (Update)
			form(name="updateForm" method="post" action="/rest-seq" onsubmit="return updateFn(this);")
				div.mr-2.form-inline
					input(type="hidden" name="_method" value="put")
					input(type="hidden" name="id")
					input.form-control.mx-1(name="stdname" placeholder="NAME" disabled)
					input.form-control.mx-1(name="kor" type="number" min="0" max="100" placeholder="KOR" disabled)
					input.form-control.mx-1(name="eng" type="number" min="0" max="100" placeholder="ENG" disabled)
					input.form-control.mx-1(name="math" type="number" min="0" max="100" placeholder="MATH" disabled)
					button.btn.btn-success.mr-2(disabled) CHG
		.div.read.my-3
			h3.mb-2 - LIST(Read)
			ul.d-flex.flex-wrap.justify-content-between
				each data in datas
					li.m-1.p-3.d-flex.border.rounded(style="flex:49% 0 0;")
						span.sp-id.mr-2= data.id
						span.sp-stdname.mr-2= data.stdname
						span.sp-kor.mr-2= `국어: ${data.kor}`
						span.sp-eng.mr-2= `영어: ${data.eng}`
						span.sp-math.mr-5= `수학: ${data.math}`
						button.bt-del.btn.btn-danger.btn-sm.mr-2 DEL
						button.bt-up.btn.btn-success.btn-sm.mr-2 CHG