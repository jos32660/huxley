extends ../layout/rest/test.pug
block title
	title REST-SQL 테스트
block css
	link(href="/css/rest.css" rel="stylesheet")
block js
	script(src="/js/rest.js")
block content
	.container
		.jumbotron
			h1 REST-SQL TEST
		.div.create.my-3.border-bottom.pb-2
			h3.mb-2.mt-3 - SAVE (Create)
			form(name="saveForm" method="post" action="/rest-sql/sql" onsubmit="return saveFn(this);")
				ul.d-flex
					li.mr-2
						input.form-control(name="username")
					li
						button.btn.btn-primary SAVE
		.div.update.my-3.border-bottom.pb-2
			h3.mb-2.mt-3 - CHANGE (Update)
			form(name="updateForm" method="post" action="/rest-sql/sql" onsubmit="return updateFn(this);")
				input(type="hidden" name="_method" value="put")
				input(type="hidden" name="id" value="")
				ul.d-flex
					li.mr-2
						input.form-control(name="username" disabled)
					li
						button.btn.btn-success(disabled) CHG
		.div.read.my-3
			h3.mb-2 - LIST(Read)
			ul.d-flex.flex-wrap
				each user in users
					li.m-1.p-3.d-flex.border.rounded
						span.sp-id.mr-2= user.id
						span.sp-username.mr-2= user.username
						button.bt-del.btn.btn-danger.btn-sm.mr-2(data-id=`${user.id}`) DEL
						button.bt-up.btn.btn-success.btn-sm.mr-2(data-id=`${user.id}`) CHG